generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Task table
model Task {
  id        String    @id @default(cuid()) 
  title     String    
  status    Status    @default(TODO)
  priority  Priority  @default(MEDIUM)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Filter by status
  @@index([status])
  @@map("tasks")
}

enum Status {
  TODO
  DOING
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}